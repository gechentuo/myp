<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password%>

			<%= f.submit '登录', class: "btn btn-large btn-primary" %>
		<% end %>
		<p>还没有帐号?<%= link_to "注册", signup_path %></p>
	</div>
</div>
